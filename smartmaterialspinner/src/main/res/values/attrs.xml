<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="SmartMaterialSpinner">
        <attr name="smsp_typeface" format="string" />
        <attr name="smsp_baseColor" format="color|reference" />
        <attr name="smsp_highlightColor" format="color|reference" />

        <attr name="smsp_itemView" format="reference" />
        <attr name="smsp_dropdownView" format="reference" />
        <attr name="smsp_searchDropdownView" format="reference" />

        <attr name="smsp_isSearchable" format="boolean" />
        <attr name="smsp_showKeyboardOnStart" format="boolean" />
        <attr name="smsp_enableSearchHeader" format="boolean" />
        <attr name="smsp_searchHeaderText" format="string" />
        <attr name="smsp_searchHeaderTextColor" format="color|reference" />
        <attr name="smsp_searchHeaderBackgroundColor" format="color|reference" />
        <attr name="smsp_searchHint" format="string" />
        <attr name="smsp_searchHintColor" format="color" />
        <attr name="smsp_searchTextColor" format="color" />
        <attr name="smsp_searchFilterColor" format="color" />
        <attr name="smsp_searchBackgroundColor" format="color|reference" />
        <attr name="smsp_enableDismissSearch" format="boolean" />
        <attr name="smsp_dismissSearchText" format="string" />
        <attr name="smsp_dismissSearchColor" format="color" />

        <attr name="smsp_itemSize" format="dimension" />
        <attr name="smsp_itemColor" format="color|reference" />

        <attr name="smsp_autoSelectable" format="boolean" />
        <attr name="smsp_showDropdownHint" format="boolean" />
        <attr name="smsp_hint" format="string" />
        <attr name="smsp_hintSize" format="dimension" />
        <attr name="smsp_hintColor" format="color|reference" />

        <attr name="smsp_itemListColor" format="color|reference" />
        <attr name="smsp_selectedItemListColor" format="color|reference" />

        <!--<attr name="smsp_showItemListHint" format="boolean" />-->
        <attr name="smsp_itemListHintColor" format="color|reference" />
        <attr name="smsp_itemListHintBackgroundColor" format="color|reference" />
        <attr name="smsp_itemListBackgroundColor" format="color|reference" />

        <attr name="smsp_enableFloatingLabel" format="boolean" />
        <attr name="smsp_alwaysShowFloatingLabel" format="boolean" />
        <attr name="smsp_floatingLabelText" format="string" />
        <attr name="smsp_floatingLabelSize" format="dimension" />
        <attr name="smsp_floatingLabelColor" format="color|reference" />

        <attr name="smsp_arrowSize" format="dimension" />
        <attr name="smsp_arrowColor" format="color|reference" />
        <attr name="smsp_arrowPaddingLeft" format="dimension" />
        <attr name="smsp_arrowPaddingTop" format="dimension" />
        <attr name="smsp_arrowPaddingRight" format="dimension" />
        <attr name="smsp_arrowPaddingBottom" format="dimension" />
        <attr name="smsp_paddingLeftRight" format="dimension" />

        <attr name="smsp_underlineSize" format="dimension" />
        <attr name="smsp_underlineColor" format="color|reference" />

        <attr name="smsp_enableErrorLabel" format="boolean" />
        <attr name="smsp_errorText" format="string" />
        <attr name="smsp_errorTextSize" format="dimension" />
        <attr name="smsp_errorTextColor" format="color|reference" />
        <attr name="smsp_multilineError" format="boolean" />
        <attr name="smsp_nbErrorLine" format="integer" />
        <attr name="smsp_errorTextAlignment" format="enum">
            <enum name="align_left" value="0" />
            <enum name="align_center" value="1" />
            <enum name="align_right" value="2" />
        </attr>

        <attr name="smsp_alignLabel" format="boolean" />
        <attr name="smsp_isRtl" format="boolean" />
        <!--<attr name="smsp_enableDefaultSelect" format="boolean" />-->
        <attr name="smsp_isReSelectable" format="boolean" />

        <attr name="smsp_isOutlined" format="boolean" />
        <attr name="smsp_outlinedBoxRadius" format="dimension" />
        <attr name="smsp_outlinedHintStartX" format="dimension" />
        <attr name="smsp_outlinedHintPadding" format="dimension" />
        <attr name="smsp_outlinedStrokeWidth" format="dimension" />
        <attr name="smsp_outlinedBoxColor" format="color|reference" />
